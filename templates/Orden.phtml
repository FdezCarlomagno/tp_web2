            <label for="orden" class="form-label">Seleccione</label>
            <select class="form-select" id="orden" name="orden">
                <option value="">Seleccione un orden</option>
                <option value="ordenPrecio">Precio</option>
                <option value="ordenNombre">Nombre</option>
            </select>
        </div>
        <div class="d-flex justify-content-between filters">
            <button type="submit" class="btn btn-primary btn-lg">Ordenar</button>
            <button type="reset" class="btn btn-outline-secondary btn-lg">Borrar</button>
        </div>

    </form>
</div>

